{
  "$schema": "https://claude.ai/schemas/mcp.json",
  "_comment": "Sample PROJECT-level MCPs. Copy to your project's .mcp.json",
  "_note": "Memory MCP should be GLOBAL (use: claude mcp add memory --scope user)",

  "mcpServers": {
    "context7": {
      "_description": "Live documentation for any library/framework",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },

    "playwright": {
      "_description": "Browser automation and E2E testing",
      "command": "npx",
      "args": ["-y", "@playwright/mcp"]
    },

    "github": {
      "_description": "GitHub API operations - requires GITHUB_TOKEN env var",
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },

    "remotion": {
      "_description": "Video generation with React",
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-remotion"]
    }
  }
}
